# Ariadne Development Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL (Metadata + Vector Storage)
DATABASE_URL=postgresql://postgres:your_postgres_password@localhost:5432/ariadne_dev

# Neo4j (Lineage Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ariadne_dev_password

# Redis (Cache + Task Queue)
REDIS_URL=redis://:ariadne_dev_password@localhost:6379/0

# ============================================================================
# Application Configuration
# ============================================================================

APP_NAME=Ariadne Metadata Management System
DEBUG=True
ENVIRONMENT=development

# Secret key for JWT signing (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ============================================================================
# JWT Authentication Configuration
# ============================================================================

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# ============================================================================
# AI Configuration (Phase 5 - Optional for Phase 1)
# ============================================================================

# OpenAI API Configuration
# For OpenAI: https://api.openai.com/v1
# For Azure OpenAI: https://your-resource.openai.azure.com/
# For other providers (Anthropic, local models, etc.): your-provider-url
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI API Key (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Embedding model for semantic search
# OpenAI: text-embedding-3-small, text-embedding-3-large
# Azure OpenAI: your-deployment-name
EMBEDDING_MODEL=text-embedding-3-small

# LLM model for natural language queries
# OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Azure OpenAI: your-deployment-name
# Anthropic: claude-3-opus, claude-3-sonnet
LLM_MODEL=gpt-4

# ============================================================================
# Celery Configuration (Phase 4 - Optional for Phase 1)
# ============================================================================

# Celery broker (Redis database 1)
CELERY_BROKER_URL=redis://:ariadne_dev_password@localhost:6379/1

# Celery result backend (Redis database 2)
CELERY_RESULT_BACKEND=redis://:ariadne_dev_password@localhost:6379/2

# ============================================================================
# CORS Configuration (Frontend)
# ============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# Logging Configuration
# ============================================================================

LOG_LEVEL=DEBUG
LOG_FORMAT=json

# ============================================================================
# Performance Configuration
# ============================================================================

# Database connection pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis connection pool
REDIS_POOL_SIZE=10

# ============================================================================
# Security Configuration
# ============================================================================

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=change-this-to-a-random-encryption-key

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================================================
# Development Tools (Optional)
# ============================================================================

# Enable SQL query logging
SQL_ECHO=False

# Enable API request logging
API_LOG_REQUESTS=True

# Enable profiling
ENABLE_PROFILING=False
